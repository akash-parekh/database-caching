{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "strict": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "types": ["node"],
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "outDir": "./dist",
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        },
        "ignoreDeprecations": "6.0"
    },
    "exclude": ["node_modules"]
}
